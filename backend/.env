# Server Configuration
PORT=3000

# Google APIs Configuration
# Create a service account in Google Cloud Console and download the JSON key
# Place it in backend/credentials/google-service-account.json

# Google Sheets ID (create a new spreadsheet and copy the ID from the URL)
GOOGLE_SHEETS_ID="your_google_sheets_id_here"

# Google Drive Folder ID (optional - will create one if not provided)
GOOGLE_DRIVE_FOLDER_ID="your_drive_folder_id_here"

# Twilio Configuration for WhatsApp
# Sign up at https://www.twilio.com and get your credentials
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886  # Twilio Sandbox number

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
