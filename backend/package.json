{
  "name": "wedding-invitation-backend",
  "version": "2.0.0",
  "description": "Backend para sistema de invitaciones de boda con Clean Architecture",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "build": "echo 'No build step required for Node.js'",
    "clean": "rm -rf coverage test-results node_modules",
    "prestart": "npm run lint",
    "postinstall": "echo 'Backend dependencies installed successfully'"
  },
  "keywords": [
    "wedding",
    "invitation",
    "clean-architecture",
    "nodejs",
    "express",
    "csv"
  ],
  "author": "Wedding Invitation Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Diegoztag/Invitacion-boda.git"
  },
  "bugs": {
    "url": "https://github.com/Diegoztag/Invitacion-boda/issues"
  },
  "homepage": "https://github.com/Diegoztag/Invitacion-boda#readme"
}
