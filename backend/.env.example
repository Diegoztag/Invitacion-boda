# Server Configuration
PORT=3000

# Google APIs Configuration
# Create a service account in Google Cloud Console and download the JSON key
# Place it in backend/credentials/google-service-account.json

# Google Sheets ID (create a new spreadsheet and copy the ID from the URL)
GOOGLE_SHEETS_ID="your_google_sheets_id_here"

# WhatsApp Web Configuration
# The QR code will be shown in the console when you start the server
# After scanning, the session will be saved automatically
COUPLE_NAMES="Diego & Fernanda"
CONFIRMATION_DEADLINE="1 de Febrero"

# Reminder Configuration
DAYS_BEFORE_REMINDER=7  # Days after invitation sent before sending reminder
ENABLE_AUTO_REMINDERS=true  # Enable automatic reminders
REMINDER_HOUR=10  # Hour of day to send reminders (24-hour format)

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
